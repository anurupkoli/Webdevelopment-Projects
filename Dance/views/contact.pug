extends base.pug

block style 
    style 
        include ../static/style.css
        include ../static/contactStyle.css

block content 
    h1 Fill The Form To Contact Us
    form.form(action="/contact", method="post") 
        input(type="text", name="name" class="myInput" placeholder="Enter Your Name")
        input(type="text", name="age" class="myInput" placeholder="Enter Your Age")
        input(type="email", name="email" class="myInput" placeholder="Enter Your Email")
        input(type="number", name="number" class="myInput" placeholder="Enter Your Mobile Number")
        input(type="text", name="address" class="myInput" placeholder="Enter Your Address")
        textarea(name="more", cols="30", rows="10" class="myInput" placeholder="More about you")
        button#btn(type="submit") Submit

        